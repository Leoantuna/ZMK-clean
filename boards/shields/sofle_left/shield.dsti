/ {
    chosen {
        zmk,display = &oled;
    };
};

&i2c1 {
    status = "okay";
    sda-pin = <26>;
    scl-pin = <27>;
    clock-frequency = <I2C_BITRATE_FAST>;
};

&oled {
    compatible = "solomon,ssd1306fb";
    reg = <0x3C>;
    width = <128>;
    height = <64>;
    segment-offset = <0>;
    page-offset = <0>;
    display-inverted;
    reset-gpios = <&gpio0 4 GPIO_ACTIVE_LOW>;
};
